<div class="background">
  <div class="container">
    <div class="row"> <!-- row 1 -->
      <div class="col-12 text-center">
        <br>
        <h1><%= @plant_guide.name %></h1>
        <h3><%= @plant_guide.science_title %></h3>
      </div>
    </div> <!-- end row 1 -->
    <br>
    <div class="row"> <!-- row 2 -->
      <div class="col-6">
        <div class="pull-right">
        <p><i class="fa fa-sun-o" aria-hidden="true"></i> Luminosity Preference</p>
        <p><i class="fa fa-tint" aria-hidden="true"></i> Water Requirement</p>
        <p><i class="fa fa-arrows-v" aria-hidden="true"></i> Planting Distance</p>
        <p><i class="fa fa-flask" aria-hidden="true"></i> Soil pH Preference</p>
        </div>
      </div>
      <div class="col-6">
        <%= image_tag (@plant_guide.image), class: 'img-fluid img-thumbnail' %>
      </div>
    </div> <!-- end row 2 -->
    <br>
    <div class="row"> <!-- row 3 -->
      <div class="col">
        <h3>Tips and Tricks</h3>
        <%= @plant_guide.tips %>
      </div>
      <div class="col">
        <h3>Nutrition & Benefits</h3>
        <%= @plant_guide.benefits %>
      </div>
    </div> <!-- end row 3 -->
  </div>
</div>

<%= link_to 'Edit', edit_plant_guide_path(@plant_guide) %> |
<%= link_to 'Back', plant_guides_path %>
